rules_version = '2';
services {
  match /databases/{database}/documents {
    // Helper function to check if user is approved
    function isApproved() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isApproved == true;
    }

    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Victims collection rules
    match /victims/{victimId} {
      allow read, write: if isApproved();
    }

    // Users collection rules
    match /users/{userId} {
      // Allow users to read their own profile
      allow read: if request.auth != null && request.auth.uid == userId;
      // Allow creation of profile on registration
      allow create: if request.auth != null && request.auth.uid == userId 
        && request.resource.data.role == 'user' 
        && request.resource.data.isApproved == false;
      
      // Admin can do everything on users
      allow read, write: if isAdmin();
    }
  }
}
